---
// Henter parametrene fra Astro.props
const { href = "#", target = "_self", variant = "text", size = "text" } = Astro.props;
// target = "_self" betyder at åbne fane i samme fane. "_blank" betyder at åbne fane i ny fane.

// Styling for link
const linkStyling = "inline-block rounded-lg transition-colors flex justify-center items-center mx-auto gap-2 text-[#182D40] font-bold px-4 py-2 ";

// Variant klasser
const variantClasses = {
  primary: "bg-[#1DBF62] hover:bg-[#24EA78] hover:text-[#072592] active:bg-[#87C8F8]",
  secondary: "bg-[#87C8F8] hover:bg-[#1DBF62]",
  textlink: "text-[#F2F4FF] hover:text-[#88C8F9] no-underline font-normal", // tekstlink variant
};

// Size klasser
const sizeClasses = {
  large: "text-2xl py-6 px-10",
  medium: "text-xl py-4 px-8",
  small: "text-base py-2 px-3",
  text: "text-base", // tekstlink størrelse
  standard: "",
};
---

<a href={href} target={target} class={`${linkStyling} ${variantClasses[variant]} ${sizeClasses[size]}`}>
  <slot />
</a>
